<div class="owner-container">
    <!-- Owner Avatar -->
    <div class="owner-img-container">
        <img src="@Model.owner.avatar" alt="">
    </div>
    <div class="owner-content">
        <!-- Owner Name -->
        <div class="owner-head">
            <h3>@Model.owner.ID</h3>
            <a href=""><h5>@Html.Raw("@")@Model.owner.tagname</h5></a>
        </div>
        <!-- Owner Data -->
        <div class="owner-data">
            <a asp-controller="User" asp-action="Sets" class="btn btn-secondary mr-1">
                <span class="btn-label">
                    <i class="fas fa-clone"></i>
                </span>&ensp;
                Học phần (@ViewData["Owner.SetCount"])
            </a>

            <a asp-controller="User" asp-action="Folders" class="btn btn-success mr-1">
                <span class="btn-label">
                    <i class="fas fa-folder"></i>
                </span>&ensp;
                Thự mục (@ViewData["Owner.FolderCount"])
            </a>

            <a asp-controller="User" asp-action="Classes" class="btn btn-info">
                <span class="btn-label">
                    <i class="fas fa-user"></i>
                </span>&ensp;
                Lớp học (@ViewData["Owner.ClassCount"])
            </a>
        </div>
    </div>
</div>