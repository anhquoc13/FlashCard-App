@{
    Layout = null;
}
@model FlashCard.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Đăng Ký | FlashCard</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" type="text/css" href="~/vendors/css/Plugins/all.min.css">

    <!-- Plugins -->
    <link rel="stylesheet" type="text/css" href="~/vendors/css/Plugins/owl-carousel.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/css/Plugins/animate.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/css/Plugins/aqua.min.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="~/vendors/css/Bootstrap/bootstrap.min.css">

    <!-- CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/resources/css/Login.css" asp-append-version="true">
    
    <!--Icon-->
    <link rel="apple-touch-icon" sizes="57x57" href="~/resources/icon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/resources/icon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/resources/icon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/resources/icon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/resources/icon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/resources/icon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/resources/icon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/resources/icon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/resources/icon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192"  href="~/resources/icon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/resources/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/resources/icon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/resources/icon/favicon-16x16.png">
    <link rel="manifest" href="~/resources/icon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/resources/icon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
</head>
<body>
    <!-- Navbar-->
<header class="header">
    <nav class="navbar navbar-expand-lg navbar-light py-3">
        <div class="container">
            <!-- Navbar Brand -->
            <a asp-action="Index" asp-controller="Intro" class="logo" style="text-decoration: none;">
                <img src="~/resources/icon/favicon-96x96.png" width="25%" height="auto" style="margin-top: -5px; margin-right: -1px;" alt="navbar brand" class="navbar-brand">
                <b class="navbar-name text-dark text-uppercase">	
                    flashcard
                </b>
            </a>
        </div>
    </nav>
</header>


<div class="container" style="margin-top: -70px;">
    <div class="row py-5 mt-4 align-items-center">
        <!-- For Demo Purpose -->
        <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
            <img src="https://res.cloudinary.com/mhmd/image/upload/v1569543678/form_d9sh6m.svg" alt="" class="img-fluid mb-3 d-none d-md-block">
            <h1>Tham gia ngay</h1><br>
            <p class="text-muted mb-0">Trải nghiệm môi trường học tập cực kỳ năng động</p>
        </div>

        <!-- Registeration Form -->
        <div class="col-md-7 col-lg-6 ml-auto">
            <form asp-action="Register" asp-controller="Intro" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4 ml-4"></div>
                    <!-- Username -->
                    <h3><b>Thông tin</b></h3>
                    <span asp-validation-for="id" class="text-danger ml-4"></span>
                    <div class="input-group col-lg-12 mb-1">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-user text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="id" id="id" type="text" name="id" placeholder="Tên đăng nhập" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- Tagname -->
                    <span asp-validation-for="Tagname" class="text-danger ml-4"></span>
                    <div class="input-group col-lg-12 mb-1">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-hashtag text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Tagname" id="Tagname" type="text" name="Tagname" placeholder="Biệt danh" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- Email -->
                    <span asp-validation-for="Email" class="text-danger ml-4"></span>
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-envelope text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Email" id="Email" type="text" name="Email" placeholder="Email" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <h3><b>Bảo mật</b></h3>
                    <!-- Password -->
                    <span asp-validation-for="Password" class="text-danger ml-4"></span>
                    <div class="input-group col-lg-12 mb-1">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-lock text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Password" id="Password" type="password" name="Password" placeholder="Mật khẩu" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- Confirm Password -->
                    <span asp-validation-for="ConfirmPassword" class="text-danger ml-4"></span>
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-lock text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Nhập lại mật khẩu" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group col-lg-12 mb-4">
                        <button type="submit" value="Register" class="btn btn-primary btn-block">
                            <span class="font-weight-bold">Đăng ký</span>
                        </button>
                    </div>
            </form>
        </div>
    </div>
</div>
    <!-- jQuery -->
    <script src="~/vendors/js/jQuery/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/vendors/js/Bootstrap/bootstrap.bundle.min.js"></script>

    <!-- Plugins -->
    <script src="~/vendors/js/Plugins/owl-carousel.js"></script>
    <script src="~/vendors/js/Plugins/scrollreveal.min.js"></script>

    <!-- Js Files -->
    <script src="~/resources/js/Login.js"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");}
}