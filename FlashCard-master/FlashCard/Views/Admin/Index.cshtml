@model Application.ViewModels.AdminViewModel

<div class="page-inner">
    <!-- Page Url  -->
    <div class="page-header">
        <h4 class="page-title">@ViewData["Page.Target"]</h4> <!-- Page Target Big -->
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                Quản lí
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">@ViewData["Page.Target"]</a> <!-- Page Target Small -->
            </li>
        </ul>
    </div>

    <!-- Page Content  -->
    <div class="page-category">
        <div class="table-responsive" style="padding: 25px;">
            <div class="table-wrapper">
                <div class="table-title">
                    <h2>Quản lí tài khoản</h2>
                    <div class="row">
                        <div class="col mt-4">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Tìm tài khoản...">
                                <div class="input-group-append">
                                    <button class="btn btn-secondary"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="col mt-4">
                            <button href="#" class="float-right btn btn-warning"><i class="fas fa-file-export"></i><span>&ensp;Xuất Excel</span></button>
                            <button href="#" class="float-right btn btn-default mr-3"><i class="fas fa-user-plus"></i><span>&ensp;Thêm tài khoản</span></button>				
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-head-bg-primary mt-4 table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>						
                            <th>Ngày tạo</th>
                            <th>Phân quyền</th>
                            <th>Tình trạng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int count = 0;}
                        @foreach (var item in Model.userList)
                        {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                <div class="avatar avatar-sm">
                                    <img src="@item.avatar" alt="..." class="avatar-img rounded-circle">
                                </div>&emsp;
                                <a asp-controller="User" asp-action="Sets" asp-route-id="@item.ID">@item.ID</a>
                            </td>
                            <td>@item.createdDay</td>
                            @if(@item.role == "Quản trị viên")
                            {
                                <td class="text-danger">@item.role</td>
                            }                        
                            else
                            {
                                <td>@item.role</td>
                            }
                            @if (@item.status == 1)
                            {
                                <td><button class="btn btn-success btn-sm btn-round">Hoạt động</button></td>
                            }
                            else
                            {
                                <td><button class="btn btn-danger btn-sm btn-round" data-toggle="tooltip" data-original-title="@item.disableDay">Vô hiệu hóa</button></td>
                            }
                            <td>
                                <button onclick="location.href='@Url.Action("Edit", "User", new { id = @item.ID })'" class="btn btn-icon btn-sm btn-round btn-info mr-2" title="" data-toggle="tooltip" data-original-title="Chỉnh sửa"><i class="fas fa-pen"></i></button>
                                <button onclick="location.href='@Url.Action("Delete", "User", new { id = @item.ID })'" class="btn btn-icon btn-sm btn-round btn-danger" title="" data-toggle="tooltip" data-original-title="Xóa"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>