@{
    Layout = "_Layout";
}

<!-- Page Header  -->
<div class="panel-header bg-primary-gradient">
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div class="form-group" style="border: 5px solid white;">
                <button class="btn btn-default" style="border-right: 5px solid white;">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>
                    Thêm
                </button>
                <button class="btn btn-success">
                    <span class="btn-label">
                        <i class="fas fa-bookmark"></i>
                    </span>
                    Đã tạo
                </button>
                <button class="btn btn-secondary">
                    <span class="btn-label">
                        <i class="fas fa-cube"></i>
                    </span>
                    Đã học
                </button>
                <button class="btn btn-warning">
                    <span class="btn-label">
                        <i class="fa fa-folder"></i>
                    </span>
                    Thư mục
                </button>
                <button class="btn btn-danger">
                    <span class="btn-label">
                        <i class="fa fa-users"></i>
                    </span>
                    Lớp học
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Page Content  -->
<div class="page-inner">
    <div class="page-category">
        <div class="col-md-12">
            <!-- Class 1 -->
            <div class="card _cardHoverBottomLine card-stats card-round">
                <div class="card-body">
                    <div class="card-category">
                        <b class="text-black">@ViewData["Class.ID1.setID.Count"] học phần</b>
                        &emsp;|&emsp;
                        <b class="text-black">@ViewData["Class.ID1.userID.Count"] thành viên</b>
                        &emsp;|&emsp;
                        @ViewData["Class.ID1.School"]
                    </div>
                    <i class="far fa-user card-title"></i>&emsp;
                    <a href="" class="card-title text-uppercase" style="text-decoration: none;">
                        <b>@ViewData["Class.ID1.Name"]</b>
                    </a>
                </div>
            </div>

            <!-- Class 2 -->
            <div class="card _cardHoverBottomLine card-stats card-round">
                <div class="card-body">
                    <div class="card-category">
                        <b class="text-black">@ViewData["Class.ID2.setID.Count"] học phần</b>
                        &emsp;|&emsp;
                        <b class="text-black">@ViewData["Class.ID2.userID.Count"] thành viên</b>
                        &emsp;|&emsp;
                        @ViewData["Class.ID2.School"]
                    </div>
                    <i class="far fa-user card-title"></i>&emsp;
                    <a href="" class="card-title text-uppercase" style="text-decoration: none;">
                        <b>@ViewData["Class.ID2.Name"]</b>
                    </a>
                </div>
            </div>

            <!-- Class 3 -->
            <div class="card _cardHoverBottomLine card-stats card-round">
                <div class="card-body">
                    <div class="card-category">
                        <b class="text-black">@ViewData["Class.ID3.setID.Count"] học phần</b>
                        &emsp;|&emsp;
