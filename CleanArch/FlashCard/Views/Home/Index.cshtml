@{
    Layout = "_Layout";
}

<div class="page-inner">
    <!-- Page Url  -->
    <div class="page-header"> 
        <h4 class="page-title">@ViewData["Page.Target"]</h4> <!-- Page Target Big -->
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="#">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                Trang
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">@ViewData["Page.Target"]</a> <!-- Page Target Small -->
            </li>
        </ul>
    </div>
    
    <!-- Page Content  -->
    <div class="page-category"><br>
        <!-- Recent -->
        <div class="col-md-12">
            <h3>
                <b>Gần đây</b>
                <a href="" class="float-right text-decoration-none">
                    Xem tất cả
                    <i class="fas fa-angle-right"></i>
                </a>
            </h3>

            <!-- Sets List -->
            <div id="cards_landscape_wrap-2">
                <div class="row">
                    <!-- Sets 1 -->
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <a href="">
                            <div class="card-flyer">
                                <div class="text-box">
                                    <div class="image-box">
                                        <img src="@ViewData["Set.ID1.Image"]" alt="" />
                                    </div>
                                    <div class="text-container">
                                        <h6>@ViewData["Set.ID1.Name"]</h6>
                                        <p>
                                            @ViewData["Set.ID1.Count"] thuật ngữ
                                            <i class="fas fa-lock"></i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Sets 2 -->
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <a href="">
                            <div class="card-flyer">
                                <div class="text-box">
                                    <div class="image-box">
                                        <img src="@ViewData["Set.ID2.Image"]" alt="" />
                                    </div>
                                    <div class="text-container">                                    
                                        <h6>@ViewData["Set.ID2.Name"]</h6>
                                        <p>
                                            @ViewData["Set.ID2.Count"] thuật ngữ
                                            <i class="fas fa-lock"></i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Sets 3 -->
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                        <a href="">
                            <div class="card-flyer">
                                <div class="text-box">
                                    <div class="image-box">
                                        <img src="@ViewData["Set.ID3.Image"]" alt="" />
                                    </div>
                                    <div class="text-container">
                                        <h6>@ViewData["Set.ID3.Name"]</h6>
                                        <p>
                                            @ViewData["Set.ID3.Count"] thuật ngữ
                                            <i class="fas fa-lock"></i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Sets 4 -->
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                            <a href="">
                                <div class="card-flyer">
                                    <div class="text-box">
                                        <div class="image-box">
                                            <img src="@ViewData["Set.ID4.Image"]" alt="" />
                                        </div>
                                        <div class="text-container">
                                            <h6>@ViewData["Set.ID4.Name"]</h6>
                                        <p>
                                            @ViewData["Set.ID4.Count"] thuật ngữ
                                            <i class="fas fa-lock"></i>
                                        </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>
            </div>

            <br>

            <!-- Recommend -->
            <div class="col-md-12">
                <h3><b>Khuyến nghị</b></h3><br>
                <div class="card full-height">
                    <div class="card-body">
                        <div class="media position-relative">
                            <img src="~/resources/images/recom.png" class="mr-3" alt="...">
                            <div class="media-body">
                                <h5 class="mt-0"><b>Thêm khóa học của bạn để nhận đề xuất</b></h5>
                                <p>Sau khi bạn cho chúng tôi biết thêm về nội dung đang học, chúng tôi sẽ có thể đề xuất học phần mà bạn cùng lớp đã học.</p>
                                <button class="btn btn-secondary">Thêm khóa học</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
