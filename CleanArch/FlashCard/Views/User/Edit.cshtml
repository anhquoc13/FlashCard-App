@{
    Layout = "_Layout";
}

<div class="page-inner">
	<!-- Page Url  -->
    <div class="page-header">
        <h4 class="page-title">@ViewData["Page.Target"]</h4> <!-- Page Target Big -->
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="#">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                Trang
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">@ViewData["Page.Target"]</a> <!-- Page Target Small -->
            </li>
        </ul>
    </div>

    <!-- Page Content  -->
	<div class="page-category">
        <div class="row">
            
            <div class="col-12 col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="disableinput">ID của bạn (Khóa): </label>
                            <input type="text" class="form-control" id="disableinput" placeholder="@ViewData["User.ID"]" disabled="">
                        </div>
                        <div class="form-group">
                            <label for="username">Họ tên: </label>
                            <div class="input-icon">
                                <span class="input-icon-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="@ViewData["User.Username"]">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username">Tài khoản: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">@Html.Raw("@")</span>
                                </div>
                                <input type="text" class="form-control" placeholder="@ViewData["User.Tagname"]" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email2">Email: </label>
                            <input type="email" class="form-control" id="email2" placeholder="@ViewData["User.Email"]">
                            <small id="emailHelp2" class="form-text text-muted">
                                Chúng tôi không bao giờ chia sẻ email của bạn cho người khác.
                            </small>
                        </div>
                        <div class="form-group form-group-default" style="margin-left: 10px;">
                            <label>Email riêng tư:</label>
                            <select class="form-control" id="formGroupDefaultSelect">
                                <option>Mọi người</option>
                                <option>Chỉ bạn bè</option>
                                <option>Chỉ mình tôi</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu: </label><br>
                            <button type="button" class="btn btn-info " id="change_password"> Đổi mật khẩu</button>
                        </div>
                        <div class="form-check">
                            <label>Giới tính: </label><br>
                            <label class="form-radio-label">
                                <input class="form-radio-input" type="radio" name="optionsRadios" value="" checked="">
                                <span class="form-radio-sign">Nam</span>
                            </label>
                            <label class="form-radio-label ml-3">
                                <input class="form-radio-input" type="radio" name="optionsRadios" value="">
                                <span class="form-radio-sign">Nữ</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="password">Quốc gia: </label>
                            <input type="text" class="form-control" id="country" placeholder="@ViewData["User.Country"]">
                        </div>
                        <div class="form-group">
                            <label for="password">Nhóm: </label>
                            <input type="text" class="form-control" id="team" placeholder="@ViewData["Team.Name"]">
                        </div>
                        <div class="form-group" style="width: 50%;">
                            <label class="form-label">Phân quyền: </label>
                            <div class="selectgroup w-100">
                                <label class="selectgroup-item">
                                    <input type="radio" name="value" value="25" class="selectgroup-input" checked="">
                                    <span class="selectgroup-button">Quản trị viên</span>
                                </label>
                                <label class="selectgroup-item">
                                    <input type="radio" name="value" value="50" class="selectgroup-input">
                                    <span class="selectgroup-button">Người dùng</span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="comment">Bio: </label>
                            <textarea class="form-control" id="Bio" rows="3" placeholder="@ViewData["User.Bio"]" style="color: black;"></textarea>
                        </div>
                        <button class="btn btn-success" style="margin-top: 40px; margin-bottom: 20px; margin-left: 10px;">
                            <span class="btn-label">
                                <i class="fa fa-save"></i>
                            </span>
                            Cập nhật hồ sơ
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-4">
                <div class="card">
                    <div class="card-body" style="width: 100%;">
                        <div class="avatar avatar-xxl" style="align-content: center; width: 50%; height: auto; display: table; margin: 0 auto;">
                            <img src="@ViewData["User.Avatar"]" alt="avatar profile" class="avatar-img rounded-circle">
                        </div>
                    </div>
                </div>
            </div>

        </div>
	</div>
</div>